<?php
namespace APINEW2\Util;

class Database {
    private $pdo;
    
    public function __construct($host, $db_name, $username, $password) {
        $this->pdo = new \PDO("mysql:host=$host;dbname=$db_name", $username, $password);
    }
    
    public function getPdo() {
        return $this->pdo;
    }
}
